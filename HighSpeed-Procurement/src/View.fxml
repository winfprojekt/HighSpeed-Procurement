<GridPane alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">

<padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   
   
       <Label prefHeight="27.0" prefWidth="94.0" text="Username:" GridPane.columnSpan="2" GridPane.rowIndex="1" />
   
       <TextField fx:id="usernameTextbox" onMouseClicked="#resetSubmitButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="1" />
   
       <Label text="Password:" GridPane.columnSpan="2" GridPane.rowIndex="2" />
   
       <PasswordField fx:id="passwordField" onMouseClicked="#resetSubmitButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="2" />
   
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="4">
      <children>
              <Button onAction="#handleSubmitButtonAction" text="Sign In" />
      </children>
       </HBox>
   
       <Text fx:id="actiontarget" GridPane.columnIndex="2" GridPane.rowIndex="8" />
   
       <Text fx:id="actiontarget2" GridPane.columnIndex="2" GridPane.rowIndex="8" />
   
       <Text id="welcome" text="Willkommen im HighSpeed-Procurement!" GridPane.columnIndex="1" GridPane.columnSpan="2" />
      <Hyperlink id="pwdvergessen" text="Passwort vergessen?" GridPane.columnIndex="2" GridPane.rowIndex="6" />
      <Hyperlink prefHeight="35.0" prefWidth="325.0" text="Neues Benutzerkonto beantragen" GridPane.columnIndex="2" GridPane.rowIndex="7" />
      <ImageView id="hpLogo" fitHeight="59.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../Desktop/truck.png" />
         </image>
      </ImageView>
   </children>

    <stylesheets>
        <URL value="@application.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints minWidth="40.0" />
      <ColumnConstraints minWidth="40.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

